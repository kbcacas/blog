%h1= @article.title

%p= @article.content
= link_to "Back to index", articles_path
%hr


%table
  %thead
    %tr
      %th Comment
      %th Actions
  
  %tbody
    - @comments.each do |comment|
      %tr
        %td
          = comment.content
        %td
          = link_to 'Edit', edit_article_comment_path(@article, comment)
          |
          = link_to "Destroy", article_comment_path(@article, comment), method: :delete, data: {confirm: "Are you sure?"}

= render 'comments/form'