<h1>
    Hello World
</h1>

<p>Coming from articles#index</p>

<table>
    <thead>
    <tr>
    <th>Name</th>
    <th>Author</th>
    <th>Content</th>
    <th>Actions</th>
    </tr>
    </thead>

    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.title %></td>
                <td><%= article.author %></td>
                <td><%= article.content.truncate(150) %></td>
                <td>
                    <%= link_to edit_article_path(article.id) do %>
                    Edit
                    <% end %>

                    <%= link_to article_path(article.id), method: :delete, data: {confirm: "Are you sure?"} do %>
                    Delete
                    <% end %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to "New Article", new_article_path %>